generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL_POOLED") // uses connection pooling
  directUrl = env("POSTGRES_URL_DIRECT") // uses a direct connection
}

model Users {
  // Unique identifier
  id String @id @default(cuid())

  // Ref of the user's collections
  markers Markers[]
}

model Markers {
  // Unique identifier
  id String @id @default(cuid())

  // The user ref that created it
  user_id String
  user    Users  @relation(fields: [user_id], references: [id])

  // Basic info
  name        String
  description String

  // Coordinates
  latitude  Decimal
  longitude Decimal

  // Utils
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @default(now()) @updatedAt @map(name: "updated_at")
}

model Maps {
  // Unique identifier
  id String @id @default(cuid())

  // Name
  name String

  // Value, the style url of the style
  urlValue String

  // Image url that is going to show on the client
  imageUrl String
}
